
[DEFAULT]
chain = true
include = cat /usr/share/mr/git-annex
include = cat /usr/share/mr/vis

[.progs]
checkout = 
    git clone ssh://swan/~/.progs
    cd $MR_REPO
    git annex init $HOSTNAME
    git_annex_sync
update =
	git_annex_sync
	git annex add .
	git_annex_sync
zap =                                                                           
	git add .                                                                   
	git_annex_sync
#git_annex_sync = git pull; git add .; git commit -m "updated `date -I`" 


[.progsoftware]
