!clear Mod4
!add Mod3 = Super_R
clear lock
!clear control
!keycode 135 = Caps_Lock !app key

!remove Mod1 = Alt_R
!remove Mod5 = Scroll_Lock

!! Esc key is mode_switch to use i j k l b in insert mode
!keycode 9 = Mode_switch
keycode 43 = h H Left
keycode 44 = j J Down
keycode 45 = k K Up
keycode 46 = l L Right
keycode 56 = b B BackSpace

!add Mod4 = Hyper_L
!add Mod1 = 0x007D 0x009C Alt_L Alt_L
!add Mod4 = 0x007F 0x0080
!add Mod5 = Mode_switch ISO_Level3_Shift

!add Lock = Caps_Lock
clear      lock 
clear   control
clear      mod1
clear      mod2
clear      mod3
clear      mod4
clear      mod5
!keycode      37 = Hyper_L
!keycode      66 = Control_L
keycode 66 = Hyper_L Caps_Lock NoSymbol NoSymbol
add     control = Control_L Control_R
add        mod1 = Alt_L Alt_R Meta_L
add        mod2 = Num_Lock
add        mod3 = Hyper_L
add        mod4 = Super_L Super_R
!add        mod5 = Mode_switch ISO_Level3_Shift
