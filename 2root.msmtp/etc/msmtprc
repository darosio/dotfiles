# System-wide msmtp configuration

# Default settings
defaults
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log
aliases        /etc/msmtp.aliases

#
# gmail
account			gmail
host			smtp.googlemail.com
port			587
auth			on
from			danielepietroarosio@gmail.com
user			danielepietroarosio@gmail.com
passwordeval	"sudo -u dan PASSWORD_STORE_DIR=/home/dan/Sync/.pass/ pass email/gmail-isync"

# postecert
account			pec
host			mail.postecert.it
port			465
auth			on
tls				on
tls_starttls	off
from			daniele.arosio@postecert.it
user			daniele.arosio@postecert.it
passwordeval	"sudo -u dan PASSWORD_STORE_DIR=/home/dan/Sync/.pass/ pass email/postecert"

# Cnr
account			cnr
host			smtp.gmail.com
port			587
from			daniele.arosio@cnr.it
user			danielepietroarosio@gmail.com
passwordeval	"sudo -u dan PASSWORD_STORE_DIR=/home/dan/Sync/.pass/ pass email/gmail-isync"
auth			on
tls			on
tls_starttls		on

# Yahoo
account			yahoo
host			smtp.mail.yahoo.com
from			danielearosio@yahoo.it
user			danielearosio@yahoo.it
passwordeval	"sudo -u dan PASSWORD_STORE_DIR=/home/dan/Sync/.pass/ pass email/yahoo"

# Set a default account
account default : gmail
