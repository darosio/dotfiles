xallexcepts = application/pdf application/postscript application/x-dvi \
application/x-fsdirectory|parentopen inode/directory \
inode/directory|parentopen text/html|chm text/html|epub \
text/html|gnuinfo

[view]
# Open directories in Foot + Yazi
inode/directory       = foot -e yazi %f
inode/directory|parentopen = foot -e yazi %f

# PDFs with Okular (or your preferred viewer)
application/pdf       = okular --page=%p %f

# Fallback: Use system default (xdg-open) for everything else
application/x-all     = xdg-open %u
