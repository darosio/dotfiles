{
  "rules": {
    "terminology": true,
    "common-misspellings": true,
    "write-good": {
      "adverb": false,
      "passive": false,
      "tooWordy": false,
      "weasel": false
    },
    "no-dead-link": true,
    "no-start-duplicated-conjunction": true,
    "max-comma": true,
    "period-in-list-item": true,
    "unexpanded-acronym": true,
    "abbr-within-parentheses": true,
    "alex": true,
    "en-max-word-count": true,
    "diacritics": true,
    "stop-words": false
  },
    "plugins": {
		"@textlint/markdown": true,
        "@textlint/text": {"extensions": [".org"] }
    }
}
